<% if obj.errors.any? %>
<div class="row">
  <div class="col-12">
<div class="card mb-3" id="errorCard">
  <div class="card-header" id="errorHeader">
    <%= pluralize(obj.errors.count, "error") %>
  Prohibited this article from being saved:
</div>
  <div class="card-body">
    <p class="card-text"><ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </p>
  </div>
  </div>
  </div>
  </div>
<% end %>
