<div class="container" id="editContainer">
  <%= render 'shared/errors', obj: @user %>
  <div class="row justify-content-center">
    <div class="col-5">
     <div class="card" id="editCard">
       <h2 class="card-title text-center" id="editHeader">Edit Your Account</h2>
       <div class="card-body py-4">
         <%= form_for(@user, :html => {role: "form"}) do |f| %>
           <div class="form-group">
             <%= f.text_field :username, class: "form-control", id: "editName", placeholder: "Username", autofocus: true %>
           </div>

           <div class="form-group">
             <%= f.email_field :email, class: "form-control", id: "editEmail", placeholder: "Email" %>
           </div>

           <div class="form-group">
             <%= f.password_field :password, class: "form-control", id: "editPassword", placeholder: "Password" %>
           </div>
           <div class="form-group" id="editdiv">
            <%= f.submit "Update Account", class: "btn btn-warning btn-lg", id: "editButton" %>
           </div>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
