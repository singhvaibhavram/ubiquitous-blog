<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <!-- Article Title -->
      <div class="form-group">
        <div class="control-label col-sm-2 bold">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
        </div>
      </div>

      <!-- Article Body -->
      <div class="form-group">
        <div class="control-label col-sm-2 bold">
          <%= f.label :description %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Content" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit class: "btn btn-success" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
